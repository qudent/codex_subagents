#!/usr/bin/env bash
# wtx â€” worktree + tmux/screen launcher (modular build)

set -euo pipefail
IFS=$'\n\t'

SCRIPT_DIR=$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)

source "$SCRIPT_DIR/lib/wtx/common.sh"
source "$SCRIPT_DIR/lib/wtx/cli.sh"
source "$SCRIPT_DIR/lib/wtx/repo.sh"
source "$SCRIPT_DIR/lib/wtx/worktree.sh"
source "$SCRIPT_DIR/lib/wtx/session.sh"

wtx::main "$@"
